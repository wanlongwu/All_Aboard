<div class="container">
  <div class="profile text-center">
    <div class="stat">
    <h1> <%= @user.name %> </h1>
    </div>
    <div class="stat">
      <% @boats.each do |boat|%>
      <% if boat.photo.url == nil %>
      <% next %>
      <% else %>
      <%= image_tag boat.photo.url %>
      <% end %>
      <h2> <%= boat.name %> </h2>
      <p> <%= link_to "update the boat", edit_boat_path(boat) %> </p>
      <p> <%= link_to "Delete", boat_path(boat), :method => :delete %> </p>
    <% end %>
    </div>

    <div class="stat">
      <% @bookings.each do |booking|%>
      <h2> <%= booking.boat.name %> </h2>
      <h1> <%= booking.start_date %> </h1>
      <h1> <%= booking.end_date %> </h1>
      <p> <%= link_to "update the booking", edit_booking_path(booking) %> </p>
      <p> <%= link_to "Cancel", booking_path(booking), :method => :delete %> </p>
      <% end %>
    </div>
  </div>
</div>
