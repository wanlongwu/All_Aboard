
<div class="row row-body">
  <div class="col-xs-3">
<!--        -->
  <div class="profile_layout">
      <ul>
        <!-- <li><%= image_tag @user.avatar.url, :style => "max-height: 200px; max-width: 175px;"%></li> -->
        <li><%= @user.name %></li>
        <li><%= link_to "Add a boat", new_boat_path %></li>
        <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
      </ul>
  </div>

    <div class="col-xs-9">



    <h3>Boats</h3>
    <table>
      <thead>
        <tr>
          <th>Boat Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @boats.each do |boat|%>
          <tr>
            <td><%= link_to boat.name, boat_path(boat) %></td>
            <td><%= link_to "delete the boat", boat_path(boat), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <h3>Bookings</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking|%>
          <tr>
            <td><%= link_to booking.boat.name, boat_path(booking.boat) %></td>
            <td><%= booking.start_date.strftime("%A, %d %b %Y %l:%M %p") %></td>
            <td><%= booking.end_date.strftime("%A, %d %b %Y %l:%M %p") %></td>
            <td><%= link_to "Cancel this booking", booking_path(booking), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

