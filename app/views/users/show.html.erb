
<%= @user.name %>

<%= link_to "Add a boat", new_boat_path %>

<% @boats.each do |boat|%>
  <%= boat.name %>
  <% if boat.photo.url == nil %>
  <% next %>
  <% else %>
  <%= image_tag boat.photo.url %>
  <% end %>
  <%= link_to "update the boat", edit_boat_path(boat) %>
  <%= link_to "delete the boat", boat_path(boat), :method => :delete %>
<% end %>

<% @bookings.each do |booking|%>
<%= booking.boat.name %>
<%= booking.start_date %>
<%= booking.end_date %>
<%= link_to "update the booking", edit_booking_path(booking) %>
<%= link_to "Cancel this booking", booking_path(booking), :method => :delete %>
<% end %>
