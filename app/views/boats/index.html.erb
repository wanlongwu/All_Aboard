<div class="main-container">
  <div class="cards-container card-body">
    <div class="row">
      <% @boats.each do |boat| %>
        <div class="col-xs-12 col-sm-4 boat-row">
          <%= link_to boat_path(boat.id) do %>
            <div class="card card-shadow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= boat.photo? ? (image_path boat.photo.url) : (image_path("boat1.jpg")) %>');">
              <div class="card-category"><%= boat.location %></div>
              <div class="card-description">
              <h2><%= boat.name %></h2>
              <p><%= "$#{boat.price} per day"  %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>">
  </div>
</div>





